<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.progetto.timebank.viewgui.BookedLessonsGraphicController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <children>
            <Label text="Le Mie Prenotazioni">
                <font><Font name="System Bold" size="24.0" /></font>
            </Label>

            <Button text="ðŸ”„ Aggiorna Stato" onAction="#onRefreshClick" style="-fx-cursor: hand; -fx-background-color: #3498db; -fx-text-fill: white;"/>
        </children>
    </HBox>

    <Label text="Qui trovi le lezioni che hai prenotato come studente." textFill="#7f8c8d"/>

    <TableView fx:id="tableLessons" prefHeight="400.0" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="colDate" prefWidth="150.0" text="Data" />
            <TableColumn fx:id="colSubject" prefWidth="200.0" text="Materia" />
            <TableColumn fx:id="colTutor" prefWidth="150.0" text="Tutor" />
            <TableColumn fx:id="colStatus" prefWidth="100.0" text="Stato" style="-fx-alignment: CENTER;"/>

            <TableColumn fx:id="colAction" prefWidth="150.0" text="Azione" style="-fx-alignment: CENTER;"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

</VBox>