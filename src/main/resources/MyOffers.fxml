<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.progetto.timebank.viewgui.MyOffersGraphicController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Gestisci le tue Competenze">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>

    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <ComboBox fx:id="cmbCourses" promptText="Seleziona Materia" prefWidth="200.0"/>
        <Button text="Aggiungi" onAction="#onAddClick" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
    </HBox>

    <Label text="Le tue competenze attuali:" textFill="#7f8c8d"/>

    <ListView fx:id="listSkills" prefHeight="200.0" prefWidth="400.0"/>

    <Button text="Rimuovi Selezionata" onAction="#onRemoveClick" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>

</VBox>