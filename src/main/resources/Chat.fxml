<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.progetto.timebank.viewgui.ChatGraphicController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Label fx:id="lblTitle" text="Chat Lezione">
            <font><Font name="System Bold" size="18.0" /></font>
        </Label>
        <Label fx:id="lblTimer" text="00:00:00" textFill="#e74c3c">
            <font><Font name="Monospaced Bold" size="20.0" /></font>
        </Label>
    </HBox>

    <TextArea fx:id="txtAreaChat" editable="false" prefHeight="300.0" prefWidth="400.0" wrapText="true"/>

    <HBox spacing="10.0">
        <TextField fx:id="txtInput" promptText="Scrivi un messaggio..." HBox.hgrow="ALWAYS" onAction="#onSendClick"/>
        <Button fx:id="btnSend" text="Invia" onAction="#onSendClick" defaultButton="true" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </HBox>

</VBox>